def main ():

    one_way_d = float(input("How many miles is the trip one-way?: "))
    num_days = int(input(" How many days a week do you go to work?: "))
    MPH = 57
    total_distance = (one_way_d * 2)*(num_days)
    total_hours = (total_distance/MPH)
    print(" miles driven per week: " , total_distance)
    print(" hours spent driving per week: " , total_hours)
   
main() 
